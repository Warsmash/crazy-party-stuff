<h1 class="attractitle">My bookings</h1>
<div class="book">



  <% @bookings.each do |booking|%>

  <h2 class="attracname">
   <%= booking.attraction.name %>
  </h2>
  
   <div class="date">
      <th>From <strong><%= booking.start_date %></th></strong>
      <th>to <strong><%= booking.end_date %></th></strong>
   </div>
   <div class="cost">
    Total price: <strong><%= ((booking.end_date - booking.start_date) * booking.attraction.price).round %> €</strong>
   </div>

  <div class="attracpic">
    <% if booking.attraction.photo.attached? %>
      <%= cl_image_tag booking.attraction.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <% end %>
</div>
<h2>past bookings: <%= @past_bookings%></h2>


