<div class="main-container">
  <h1>Party attractions</h1>

    <%= form_tag attractions_path, method: :get do %>
    <div class="d-flex search-bar">
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find your attraction"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

</div>

  <div class="card-behavior">
    <% @attractions.each do |attraction| %>
      <div class="card" style="background-image: url(<%= cl_image_path attraction.photo.key %>)">
        <div class="card-content">
          <h4 class="card-title"><%= attraction.name %></h4>
          <p class="card-body"><%= attraction.one_liner %></p>
          <p class="card-body"><%= attraction.price %> â‚¬ per day</p>
          <%= link_to "View Details...", attraction_path(attraction), class: 'button' %>
        </div>
      </div>
    <% end %>
  </div>
