<div class="container">
  <h1>Party attractions near you</h1>

  <div class="attractions">
    <% @attractions.each do |attraction| %>
      <div class="attraction-card" <% if attraction.photo && attraction.photo.attached? %>
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('<%= cl_image_path attraction.photo.key, crop: :fill %>')" <% end %>>
        <h3> <%= link_to attraction.name, attraction_path(attraction) %>  </h3>
        <p> <%= attraction.one_liner %> </p>
      </div>
    <% end %>
  </div>

</div>
