<div class="container">
  <h1>Party attractions near you</h1>

  <div class="card_behavior">
    <% @attractions.each do |attraction| %>
      <div class="card" <% if attraction.photo && attraction.photo.attached? %>
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path attraction.photo.key, crop: :fill %>')" <% end %>>
        <div class="card-content">
          <h3 class="card-title"><%= attraction.name %></h3>
            <p class="card-body"><%= attraction.one_liner %></p>
            <p class="card-body"><%= attraction.price %> â‚¬ per day</p>
             <%= link_to "View Details...", attraction_path(attraction), class: 'button' %>
        </div>
      </div>
    <% end %>
  </div>

</div>
