<div class="container">
  <div class="ui segment">
  <h1>Inbox</h1>
  <div class="ui list">
    <div class="item">
    <% @conversations.each do |conversation| %>
    <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
      <% if conversation.sender_id == current_user.id %>
        <% recipient = User.find(conversation.recipient_id) %>
      <% else %>
        <% recipient = User.find(conversation.sender_id) %>
      <% end %>
      <div class="d-flex align-items-center">
        <% if recipient.photo.attached? %>
          <img class="avatar mx-2" src="<%= recipient.photo.url %>">
        <% else %>
          <img class="avatar mx-2" src="https://www.pasrc.org/sites/g/files/toruqf431/files/styles/freeform_750w/public/2021-03/blank-profile-picture_0.jpg?itok=iSBmDxc8">
        <% end %>
        <%= link_to "Chat with #{recipient.first_name}", conversation_messages_path(conversation), class: "recipient-name"%>
      </div>
    <% end %>
    <% end %>
    </div>
  </div>
  </div>
